{
  "name": "apollo-server-3-playground",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "scripts": {
    "compile": "tsc && cp src/schema.graphql dist",
    "execute": "node dist",
    "clean": "rm -rf dist",
    "start": "npm run clean && npm run compile && npm run execute",
    "dev": "nodemon -x node --experimental-specifier-resolution=node --loader ts-node/esm src",
    "up:dev": "docker-compose up",
    "up:dev:build": "docker-compose up --build",
    "up:prod": "docker-compose -f docker-compose.yml up --build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.3.0",
    "@graphql-tools/load": "^7.3.2",
    "@graphql-tools/schema": "^8.2.0",
    "@graphql-tools/utils": "^8.2.5",
    "@prisma/client": "^3.2.1",
    "apollo-server-fastify": "^3.3.0",
    "fastify": "^3.22.0",
    "graphql": "^15.6.1",
    "nodemon": "^2.0.13"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "prisma": "^3.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.0-beta"
  }
}
