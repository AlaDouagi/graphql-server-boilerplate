{
  "name": "graphql-server-boilerplate",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "scripts": {
    "compile": "tsc && cp src/schema.graphql dist",
    "execute": "node dist",
    "clean": "rm -rf dist",
    "start": "npm run clean && npm run compile && npm run execute",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "up:dev": "docker-compose up",
    "up:dev:build": "docker-compose up --build",
    "up:prod": "docker-compose -f docker-compose.yml up --build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "graphql",
    "apollo-server-3",
    "fastify",
    "typescript",
    "esm",
    "prisma"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.3.2",
    "@graphql-tools/load": "^7.4.1",
    "@graphql-tools/schema": "^8.3.1",
    "@graphql-tools/utils": "^8.5.2",
    "@prisma/client": "^3.4.1",
    "apollo-server-fastify": "^3.5.0",
    "fastify": "^3.23.0",
    "graphql": "^16.0.1",
    "nodemon": "^2.0.14"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.106",
    "@tsconfig/node16": "^1.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "husky": "^7.0.4",
    "prettier": "^2.4.1",
    "prisma": "^3.4.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.0-beta"
  }
}
